<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e7e9"
    tools:context=".MainActivity">

     <TextView
         android:id="@+id/title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="16dp"
         android:text="Security"
         android:textColor="@color/black"
         android:textSize="16sp"
         android:textStyle="bold"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pink_card"
        app:cardBackgroundColor="#f0737b"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <TextView
        android:id="@+id/text_sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:text="SOS"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constrainStart_toStartOf="@id/pink_card"
        app:layout_constraintTop_toTopOf="@+id/pink_card"/>

    <TextView
        app:layout_constraintEnd_toStartOf="@+id/sos_img"
        app:layout_constraintTop_toBottomOf="@id/text_sos"
        app:layout_constraintStart_toStartOf="@id/pink_card"
        android:id="@+id/sos_msg"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:text="In case of emergency, keep telling family members to contact me."
        android:textColor="@color/white" />
    <ImageView
        android:id="@+id/sos_img"
        android:src="@drawable/sos"
        app:layout_constraintEnd_toEndOf="@id/pink_card"
        app:layout_constraintTop_toTopOf="@id/pink_card"
        app:layout_constraintBottom_toBottomOf="@id/pink_card"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:layout_width="96dp"
        android:layout_height="96dp"/>




    <com.google.android.material.card.MaterialCardView
        android:id="@+id/green_card"
        app:cardBackgroundColor="#63d2c8"
        android:layout_margin="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/pink_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <TextView
        android:id="@+id/text_guard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:text="GUARD"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/green_card"
        app:layout_constrainStart_toStartOf="@id/green_card"
        app:layout_constraintTop_toTopOf="@+id/green_card"/>

    <TextView
        app:layout_constraintEnd_toStartOf="@+id/guard_img"
        app:layout_constraintTop_toBottomOf="@id/text_guard"
        app:layout_constraintStart_toStartOf="@id/green_card"
        android:id="@+id/guard_msg"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:text="Open when you are on potentially dangerous journey!"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/guard_img"
        android:src="@drawable/guard"
        app:layout_constraintEnd_toEndOf="@id/green_card"
        app:layout_constraintTop_toTopOf="@id/green_card"
        app:layout_constraintBottom_toBottomOf="@id/green_card"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:layout_width="96dp"
        android:layout_height="96dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>